{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "skipLibCheck": true,
    "outDir": "build/es5",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "dist", "build"],
  "files": ["src/index.ts"],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleId": "ngx-zombie-compiler",
    "flatModuleOutFile": "ngx-zombie-compiler.js",
    "annotateForClosureCompiler": true
  }
}
